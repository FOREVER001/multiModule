<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#212121"
        android:textSize="15sp"
        tools:text="标题标题标题标题标题标题标题标题" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_title"
        android:layout_below="@id/tv_title"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:textSize="13sp"
        tools:text="姓名" />


    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_user_name"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_12"
        android:padding="@dimen/dp_4"
        android:src="@mipmap/icon_unlike" />

    <ImageView
        android:id="@+id/iv_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_like"
        android:layout_alignTop="@id/iv_like"
        android:layout_marginLeft="@dimen/dp_8"
        android:src="@drawable/module1_ic_new" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/iv_like"
        android:layout_marginRight="@dimen/dp_12"
        android:textColor="@color/module1_757575"
        android:textSize="13sp"
        tools:text="2018dddddddd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_alignBottom="@id/iv_like"
        android:background="#DDDEE3" />
</RelativeLayout>
